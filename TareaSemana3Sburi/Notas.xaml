<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSemana3Sburi.Notas">

    <StackLayout>

        <Label x:Name="lblUser"  TextColor="Black" />
        
        <Frame BackgroundColor="#2196F3" Padding="5" CornerRadius="0">
            <Label Text="CALIFICACIONES UNIVERSIDAD ISRAEL" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
        </Frame>

        

        <Label Text="Ingrese Nota Seguimiento 1"/>
        <Entry x:Name ="txtDato1"/>


        <Label Text="Ingrese Nota Examen"/>
        <Entry x:Name="txtDato2"/>


        <Label Text="Nota Parcial 1"/>
        <Entry x:Name="txtResultado" IsEnabled="False"/>


        <Button x:Name="btnCalcular"
                Text="Calcular"
                Clicked ="btnCalcular_Clicked"/>




        <Label Text="Ingrese Nota Seguimiento 2"/>
        <Entry x:Name ="txtDato3"/>


        <Label Text="Ingrese Nota Examen"/>
        <Entry x:Name="txtDato4"/>


        <Label Text="Nota Parcial 2"/>
        <Entry x:Name="txtResultado2" IsEnabled="False"/>

        <Label Text="Nota Final"/>
        <Entry x:Name="txtNotaFinal" IsEnabled="False"/>


        <Button x:Name="btnCalcular2"
                Text="Calcular"
                Clicked ="btnCalcular2_Clicked"/>


    </StackLayout>



</ContentPage>